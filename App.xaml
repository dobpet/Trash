<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MoveControl"
             x:Class="MoveControl.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="PrimaryColor">#512bdf</Color>
            <Color x:Key="SecondaryColor">White</Color>
            <Color x:Key="PanelColor">#637383</Color>
            <Color x:Key="PanelLightColor">#9BB3CC</Color>
            <Color x:Key="PanelDarkColor">#262C33</Color>
            <Color x:Key="EdgeColor">#FFCA60</Color>
            <Color x:Key="GreenLampColor">#00FF00</Color>
            <Color x:Key="GreenLampColorOff">#1000FF00</Color>
            <Color x:Key="BlueLampColor">#4FCFCF</Color>
            <Color x:Key="BlueDisplayColor">#00FFFF</Color>
            <Color x:Key="ReleasedButonBackground">#303030</Color>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
